---
const { data } = Astro.props;
---

<style>
  .container{
    font-family: monospace;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 1rem 2rem;
    box-sizing: border-box;
    background-color: #181818;
    border-radius: 5px;
  }
  #bold {
    font-weight: bold;
    color: white;
  }

 .method {
    border-radius: 5px;
    padding: 2px 10px;
  }
  .base {
    margin: 0 !important;
    color: grey;
    word-break: break-all;
  }

</style>

<div class="container">
  <p class="method" style={{ backgroundColor:
    data.method === "POST" ? "#1aabff" :
    data.method === "GET" ? "#07b871" :
    data.method === "PUT" ? "#f46d2b" :
    data.method === "DELETE" ? "#f05152" :
      "transparent"
    }}>
    {data.method}
  </p>
  <p class="base">{data.base}<span id="bold">{data.route}</span></p>
</div>

